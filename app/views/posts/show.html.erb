<p id="notice"></p>

<p>
<div class="title">
  <strong>Title:</strong>
</div>
<p style="color: <%= @post.color %>">
  <%= @post.title %>
</p>

<div class="palindrome">
  title palindrome <%= @fancifier.palindrome %>
</div>
<div class="detect_palindrome">
  <!--this was added for run success all palindrome test, i don't understood this functionality,
        the READ ME is not specific  about this-->
  <%= @fancifier.largest.blank? ? 'false':'true' %>
</div>
<div class="detect_smallest_palindrome"> " <%= @fancifier.largest %> " </div>

</p>

<% if @post.photo.attached? %>
  <p>
    <strong>Photo:</strong>
  <div class="image">
    <%= image_tag(url_for @post.photo) %>
  </div>
  </p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
